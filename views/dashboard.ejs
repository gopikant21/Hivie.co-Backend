<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
</head>
<body>
    <header>
        <h1>Dashboard</h1>
    </header>
    <div class="container">
        <h2>Facebook Page Details</h2>
        <p>Page ID: <%= pageData.id %></p>
        <p>Page Name: <%= pageData.name %></p>
        <p>Category: <%= pageData.category %></p>
        <% if (pageData.instagramUserId) { %>
            <div class="instagram-details">
                <h2>Instagram Account Details</h2>
                <p>Instagram Username: <%= pageData.instagramUsername %></p>
                <p>Total Followers: <%= pageData.totalFollowers %></p>
                <p>Professional Account: <%= pageData.isProfessional %></p>
            </div>
        <% } else { %>
            <div class="no-instagram">
                <p>No Instagram account linked to this page.</p>
            </div>
        <% } %>
    </div>
</body>
</html>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap');

body {
    font-family: 'Roboto', sans-serif;
    margin: 0;
    padding: 0;
    background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%);
    color: #333;
    overflow-x: hidden;
    animation: backgroundAnimation 20s linear infinite;
}

header {
    background: linear-gradient(45deg, #ff9a9e, #fad0c4);
    color: #fff;
    padding: 2em 0;
    text-align: center;
    position: relative;
    animation: headerAnimation 2s ease-in-out forwards, shadowPulse 3s infinite alternate;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
    border-bottom: 5px solid rgba(255, 255, 255, 0.3);
    overflow: hidden;
    z-index: 1;
}

header::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle at center, rgba(255, 255, 255, 0.3), rgba(0, 0, 0, 0));
    animation: headerOverlayAnimation 6s infinite alternate;
    z-index: -1;
}

.container {
    padding: 2em;
    max-width: 800px;
    margin: 2em auto;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    transform: scale(0.98);
    animation: scaleUp 0.5s ease-in-out forwards, slideInFromLeft 1s ease-out;
    overflow: hidden;
}

.container::before, .container::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, rgba(0, 0, 0, 0.05), rgba(255, 255, 255, 0));
    pointer-events: none;
}

.container::before {
    z-index: 1;
    mix-blend-mode: overlay;
    animation: containerOverlayAnimation 8s infinite alternate;
}

.container::after {
    z-index: 2;
    mix-blend-mode: color-dodge;
    animation: containerOverlayAnimation2 10s infinite alternate;
}

h1 {
    font-size: 2.5em;
    color: #fff;
    margin: 0;
    animation: textGlow 2s infinite alternate, colorShift 10s linear infinite;
}

h2 {
    color: #333;
    font-size: 2em;
    text-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
}

p {
    line-height: 1.8;
    font-size: 1.2em;
}

.instagram-details {
    margin-top: 1.5em;
    padding: 1.5em;
    background: rgba(233, 245, 233, 0.8);
    border-left: 8px solid #4CAF50;
    border-radius: 8px;
    position: relative;
    overflow: hidden;
    transition: background 0.4s ease, transform 0.4s ease, box-shadow 0.4s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

.instagram-details::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.1), rgba(0, 0, 0, 0) 70%);
    animation: overlayAnimation 3s infinite alternate;
    z-index: 0;
    pointer-events: none;
}

.instagram-details h2 {
    position: relative;
    z-index: 1;
}

.instagram-details:hover {
    background: rgba(213, 240, 213, 0.8);
    transform: scale(1.05);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
}

.no-instagram {
    margin-top: 1.5em;
    padding: 1.5em;
    background: rgba(255, 228, 228, 0.8);
    border-left: 8px solid #f44336;
    border-radius: 8px;
    position: relative;
    overflow: hidden;
    transition: background 0.4s ease, transform 0.4s ease, box-shadow 0.4s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

.no-instagram::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(255, 0, 0, 0.1), rgba(0, 0, 0, 0) 70%);
    animation: overlayAnimation 3s infinite alternate;
    z-index: 0;
    pointer-events: none;
}

.no-instagram h2 {
    position: relative;
    z-index: 1;
}

.no-instagram:hover {
    background: rgba(255, 204, 204, 0.8);
    transform: scale(1.05);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
}

img {
    max-width: 150px;
    height: auto;
    border-radius: 50%;
    border: 3px solid #4CAF50;
    transition: transform 0.4s ease, box-shadow 0.4s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

img:hover {
    transform: scale(1.15);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
}

@keyframes backgroundAnimation {
    0% { background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%); }
    50% { background: linear-gradient(135deg, #c1c2c4 0%, #f5f7fa 100%); }
    100% { background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%); }
}

@keyframes headerAnimation {
    from {
        transform: translateY(-100px);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

@keyframes textGlow {
    from {
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
    }
    to {
        text-shadow: 0 0 25px rgba(255, 255, 255, 1);
    }
}

@keyframes colorShift {
    0% { color: #e9353b; }
    50% { color: #78230b; }
    100% { color: #d8171d; }
}

@keyframes scaleUp {
    from {
        transform: scale(0.95);
        opacity: 0.8;
    }
    to {
        transform: scale(1);
        opacity: 1;
    }
}

@keyframes slideInFromLeft {
    from {
        transform: translateX(-20px);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

@keyframes shadowPulse {
    from {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.4);
    }
    to {
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.6);
    }
}

@keyframes overlayAnimation {
    0% { background: rgba(255, 255, 255, 0.1); }
    50% { background: rgba(255, 255, 255, 0.2); }
    100% { background: rgba(255, 255, 255, 0.1); }
}

@keyframes headerOverlayAnimation {
    0% { background: radial-gradient(circle at center, rgba(255, 255, 255, 0.3), rgba(0, 0, 0, 0)); }
    50% { background: radial-gradient(circle at center, rgba(255, 255, 255, 0.1), rgba(0, 0, 0, 0)); }
    100% { background: radial-gradient(circle at center, rgba(255, 255, 255, 0.3), rgba(0, 0, 0, 0)); }
}

@keyframes containerOverlayAnimation {
    0% { background: linear-gradient(45deg, rgba(0, 0, 0, 0.05), rgba(255, 255, 255, 0)); }
    50% { background: linear-gradient(45deg, rgba(0, 0, 0, 0.1), rgba(255, 255, 255, 0)); }
    100% { background: linear-gradient(45deg, rgba(0, 0, 0, 0.05), rgba(255, 255, 255, 0)); }
}

@keyframes containerOverlayAnimation2 {
    0% { background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(0, 0, 0, 0)); }
    50% { background: linear-gradient(135deg, rgba(255, 255, 255, 0.2), rgba(0, 0, 0, 0)); }
    100% { background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(0, 0, 0, 0)); }
}

</style>
